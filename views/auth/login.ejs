<%- include('../partials/header', { pageTitle: 'Login ke Akun Anda' }) %>

<div class="container auth-form-container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <a href="/"><i class="fas fa-store fa-3x text-primary mb-3"></i></a>
                        <h2 class="card-title fw-bold">Selamat Datang Kembali!</h2>
                        <p class="text-muted">Login untuk mengakses akun Anda di <%= storeName %>.</p>
                    </div>

                    <form action="/login" method="POST" class="needs-validation" novalidate>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Email Anda" required autofocus>
                            <label for="email"><i class="fas fa-envelope me-2"></i>Email</label>
                            <div class="invalid-feedback">Masukkan alamat email yang valid.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Password Anda" required>
                            <label for="password"><i class="fas fa-lock me-2"></i>Password</label>
                            <div class="invalid-feedback">Password tidak boleh kosong.</div>
                        </div>
                        <div class="d-flex justify-content-end mb-3">
                            <a href="/forgot-password" class="form-text text-muted text-decoration-none">Lupa Password?</a>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold"><i class="fas fa-sign-in-alt me-2"></i>LOGIN</button>
                        </div>
                    </form>
                    <p class="mt-4 text-center text-muted">Belum punya akun? <a href="/register" class="fw-bold text-decoration-none">Daftar di sini</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
      'use strict'
      var forms = document.querySelectorAll('.needs-validation')
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
    })()
</script>
<%- include('../partials/footer') %>