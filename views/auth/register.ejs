<%- include('../partials/header', { pageTitle: 'Register Akun Baru' }) %>

<div class="container auth-form-container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <a href="/"><i class="fas fa-user-plus fa-3x text-primary mb-3"></i></a>
                        <h2 class="card-title fw-bold">Buat Akun Baru</h2>
                        <p class="text-muted">Bergabunglah dengan <%= storeName %> hari ini!</p>
                    </div>
                    <form action="/register" method="POST" class="needs-validation" novalidate>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control form-control-lg" id="username" name="username" placeholder="Username Anda" required minlength="3">
                            <label for="username"><i class="fas fa-user me-2"></i>Username</label>
                            <div class="invalid-feedback">Username minimal 3 karakter.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Email Anda" required>
                            <label for="email"><i class="fas fa-envelope me-2"></i>Email</label>
                            <div class="invalid-feedback">Masukkan alamat email yang valid.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Password" required minlength="8">
                            <label for="password"><i class="fas fa-lock me-2"></i>Password</label>
                            <div class="invalid-feedback">Password minimal 8 karakter.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control form-control-lg" id="confirmPassword" name="confirmPassword" placeholder="Konfirmasi Password" required>
                            <label for="confirmPassword"><i class="fas fa-check-double me-2"></i>Konfirmasi Password</label>
                            <div class="invalid-feedback">Konfirmasi password tidak boleh kosong.</div>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold"><i class="fas fa-user-check me-2"></i>REGISTER</button>
                        </div>
                    </form>
                    <p class="mt-4 text-center text-muted">Sudah punya akun? <a href="/login" class="fw-bold text-decoration-none">Login di sini</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
      'use strict'
      var forms = document.querySelectorAll('.needs-validation')
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
    })()
</script>
<%- include('../partials/footer') %>