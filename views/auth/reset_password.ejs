<%- include('../partials/header', { pageTitle: 'Reset Password Anda' }) %>

<div class="container auth-form-container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                         <a href="/"><i class="fas fa-shield-alt fa-3x text-primary mb-3"></i></a>
                        <h2 class="card-title fw-bold">Reset Password Anda</h2>
                        <p class="text-muted">Masukkan password baru Anda di bawah ini.</p>
                    </div>

                    <form action="/reset-password/<%= token %>" method="POST" class="needs-validation" novalidate>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Password Baru" required minlength="8">
                            <label for="password"><i class="fas fa-lock me-2"></i>Password Baru</label>
                            <div class="invalid-feedback">Password baru minimal 8 karakter.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control form-control-lg" id="confirmPassword" name="confirmPassword" placeholder="Konfirmasi Password Baru" required>
                            <label for="confirmPassword"><i class="fas fa-check-double me-2"></i>Konfirmasi Password Baru</label>
                            <div class="invalid-feedback">Konfirmasi password tidak boleh kosong.</div>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold"><i class="fas fa-save me-2"></i>RESET PASSWORD</button>
                        </div>
                    </form>
                     <p class="mt-4 text-center text-muted"><a href="/login" class="fw-bold text-decoration-none">Kembali ke Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
      'use strict'
      var forms = document.querySelectorAll('.needs-validation')
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
    })()
</script>
<%- include('../partials/footer') %>