<%- include('../partials/header', { pageTitle: 'Lupa Password' }) %>

<div class="container auth-form-container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <a href="/"><i class="fas fa-key fa-3x text-primary mb-3"></i></a>
                        <h2 class="card-title fw-bold">Lupa Password Anda?</h2>
                        <p class="text-muted">Masukkan alamat email Anda di bawah ini dan kami akan mengirimkan instruksi untuk mereset password Anda.</p>
                    </div>

                    <form action="/forgot-password" method="POST" class="needs-validation" novalidate>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Email Anda" required autofocus>
                            <label for="email"><i class="fas fa-envelope me-2"></i>Alamat Email</label>
                            <div class="invalid-feedback">Masukkan alamat email yang valid.</div>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold"><i class="fas fa-paper-plane me-2"></i>KIRIM INSTRUKSI RESET</button>
                        </div>
                    </form>
                    <p class="mt-4 text-center text-muted">Ingat password Anda? <a href="/login" class="fw-bold text-decoration-none">Login di sini</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
      'use strict'
      var forms = document.querySelectorAll('.needs-validation')
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
    })()
</script>
<%- include('../partials/footer') %>