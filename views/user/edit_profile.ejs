<%- include('../partials/header') %>

<div class="container py-md-5">
    <h2 class="mb-4"><i class="fas fa-user-edit me-2"></i>Edit Profil</h2>
    <hr class="mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5">
                    <form action="/user/profile/edit" method="POST">
                        <h5 class="text-primary mb-3"><i class="fas fa-info-circle me-2"></i>Informasi Dasar</h5>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" name="username" value="<%= userToEdit.username %>" placeholder="Username" required>
                            <label for="username">Username</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" value="<%= userToEdit.email %>" placeholder="Email" required>
                            <label for="email">Email</label>
                        </div>

                        <hr class="my-4">
                        <h5 class="text-primary mb-3"><i class="fas fa-key me-2"></i>Ubah Password (Opsional)</h5>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="current_password" name="current_password" placeholder="Password Saat Ini">
                            <label for="current_password">Password Saat Ini</label>
                            <div class="form-text">Kosongkan jika tidak ingin mengubah password.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="new_password" name="new_password" placeholder="Password Baru">
                            <label for="new_password">Password Baru</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="confirm_new_password" name="confirm_new_password" placeholder="Konfirmasi Password Baru">
                            <label for="confirm_new_password">Konfirmasi Password Baru</label>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save me-2"></i>Simpan Perubahan</button>
                        </div>
                         <div class="text-center mt-3">
                            <a href="/user/profile" class="btn btn-outline-secondary"><i class="fas fa-times me-2"></i>Batal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>